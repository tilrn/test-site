{% extends "base.html.twig" %}


{% block content %}

<div class="product-detail">
    <h1>{{ product.name }}</h1>
    <p>{{ product.subtitle }}</p>
    
    <img src="{{ product.image}}" alt="{{ product.name }}">

    {% for paragraph in product.paragraphs %}
    <p>{{ paragraph}}</p>
    {% endfor %}

    <a href="index.php"> Nazaj na seznam</a>
</div>

{% endblock %}